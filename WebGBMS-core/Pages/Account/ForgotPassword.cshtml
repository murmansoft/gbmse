@page
@model ForgotPasswordModel

@{
    Layout = "~/Pages/_LayoutNoMenu.cshtml";
    ViewData["Title"] = "Забыли пароль";
}

<p class="login-box-msg">Укажите ваш Email</p>

<form method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group has-feedback">
        <input type="email" asp-for="Input.Email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="row">
        <!-- /.col -->
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Восстановить</button>
        </div>
        <!-- /.col -->
    </div>
</form>

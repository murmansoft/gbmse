@page
@model RegisterModel
@{
    ViewData["Title"] = "Регистрация";
    Layout = "~/Pages/_LayoutNoMenu.cshtml";
}


<p class="login-box-msg">Регистрация нового пользователя</p>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div class="form-group has-feedback">
        <input type="text" class="form-control" placeholder="Имя">
        <span class="glyphicon glyphicon-user form-control-feedback"></span>
        @*<span asp-validation-for="Input.Email" class="text-danger"></span>*@
    </div>
    <div class="form-group has-feedback">
        <input  type="email" asp-for="Input.Email" class="form-control" placeholder="Email">
        <span class="glyphicon glyphicon-envelope form-control-feedback"></span>
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" asp-for="Input.Password" class="form-control" placeholder="Пароль">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group has-feedback">
        <input type="password" asp-for="Input.ConfirmPassword" class="form-control" placeholder="Подтверждение">
        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>
    <div class="row">
        @*<div class="col-xs-6">
            <div class="checkbox icheck">
                <label>
                    <input type="checkbox"> Принимаю <a href="#">соглашение</a>
                </label>
            </div>
        </div>*@
        <!-- /.col -->
        <div class="col-xs-12">
            <button type="submit" class="btn btn-primary btn-block btn-flat">Регисистрация</button>
        </div>
        <!-- /.col -->
    </div>
</form>
